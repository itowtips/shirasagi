<dl class="see mod-contact">
  <dt><%= @model.t :contact_state %></dt>
  <dd><%= @item.label :contact_state %></dd>
  <dt><%= @model.t :contact_group_id %></dt>
  <dd class="contact-group-id">
  <% if @item.contact_group_id.present? %>
    <%= (SS::Group.find_by id: @item.contact_group_id).name rescue "" %>
  <% end %>
  </dd>
  <dt><%= @model.t :contact_charge %></dt>
  <dd class="contact-charge"><%= @item.contact_charge %></dd>
  <dt><%= @model.t :contact_tel %></dt>
  <dd class="contact-tel"><%= @item.contact_tel %></dd>
  <dt><%= @model.t :contact_fax %></dt>
  <dd class="contact-fax"><%= @item.contact_fax %></dd>
  <dt><%= @model.t :contact_email %></dt>
  <dd class="contact-email"><%= @item.contact_email %></dd>
</dl>
