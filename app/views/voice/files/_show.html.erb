<dl class="see">
  <dt><%= @model.t :url %></dt>
  <dd><%= link_to @item.url, @item.url, target: :_blank, rel: "noopener" %></dd>

  <% if @item.exists? && @item.has_error == 0 %>
  <dt><%= @model.t :play %></dt>
  <dd><%= content_tag("audio", "", controls: true, src: url_for(action: :file, id: @item)) %></dd>
  <% end %>

  <dt><%= @model.t :error %></dt>
  <dd><%= text_area_tag :error, @item.error %></dd>

  <dt><%= @model.t :updated %></dt>
  <dd><%= ss_time_tag @item.updated %></dd>

  <dt><%= @model.t :lock_until %></dt>
  <dd><%= ss_time_tag @item.lock_until %></dd>
</dl>
