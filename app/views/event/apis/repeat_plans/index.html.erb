<%= jquery do %>
$(".event-repeat-js-date").datetimepicker({ lang: "ja", timepicker: false, format: "Y/m/d" });
<% end %>

<%= coffee do %>

SS.ajaxForm "form.event-repeat",
  success: (data) ->
    alert(data)
    #$("#cboxLoadedContent").load "<%= url_for(action: :index) %>"

<% end %>

<%= form_tag(event_apis_repeat_plans_path(site: @cur_site.id), :method => :put, class: "event-repeat") do |f| %>

  <dl class="see">
    <dt>繰り返し設定</dt>
    <dd><%= select_tag :interval, options_for_select(["毎日", "毎週", "毎月", "毎年"]) %></dd>

    <dt>繰り返し間隔</dt>
    <dd><%= select_tag :interval, options_for_select(1..10) %></dd>

    <dt class="repeat-weekly">曜日</dt>
    <dd class="repeat-weekly">
      <% (0..6).each do |i| %>
      <label><%= check_box_tag "wdays[]", {}, i.to_s %> <%= t("date.abbr_day_names")[i] %></label>
      <% end %>
    </dd>

    <dt>開始日</dt>
    <dd><%= text_field_tag :repeat_start, "", class: "date event-repeat-js-date repeat_start" %></dd>

    <dt>終了日</dt>
    <dd><%= text_field_tag :repeat_start, "", class: "date event-repeat-js-date repeat_end" %></dd>
  </dl>

  <%= button_tag t("views.button.save"), class: "save btn", style: "margin-left: 10px;" %>

<% end %>
