<dl class="see mod-event-body">
  <dt><%= @model.t :schedule %></dt>
  <dd><%=br @item.schedule.to_s %></dd>

  <dt><%= @model.t :venue %></dt>
  <dd><%=br @item.venue.to_s %></dd>

  <% if @item.facility_pages.present? %>
    <dt><%= @model.t :facility_pages %></dt>
    <dd><%=br @item.facility_pages.pluck(:name).join("\n") %></dd>
  <% end %>

  <dt><%= @model.t :content %></dt>
  <dd><%=br @item.content.to_s %></dd>

  <dt><%= @model.t :related_url %></dt>
  <dd><%= link_to(@item.related_url, @item.related_url, target: "_blank") if @item.related_url.present? %></dd>

  <dt><%= @model.t :cost %></dt>
  <dd><%=br @item.cost.to_s %></dd>

  <dt><%= @model.t :contact %></dt>
  <dd><%=br @item.contact.to_s %></dd>
</dl>
