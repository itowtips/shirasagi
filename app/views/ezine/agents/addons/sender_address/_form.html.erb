<dl class="see mod-ezine-senderaddress">
  <dt><%= @model.t :sender_name %><%= @model.tt :sender_name %></dt>
  <dd><%= f.text_field :sender_name %></dd>
  <dt><%= @model.t :sender_email %><%= @model.tt :sender_email %></dt>
  <dd><%= f.text_field :sender_email %></dd>

  <% if @cur_site.translate_enabled? %>
    <%= jquery do %>
      $("button.translate-text").click(function(){
        <% @cur_site.translate_targets.each do |target| %>
          if ($(".ss-translations-form-<%= target.id %>:visible").length) {
            Translate_Convertor.convert('<%= translate_apis_convertors_path %>', $("#item_sender_name").val(), '<%= @cur_site.translate_source_id %>', '<%= target.id %>', function(body) {
              if (body) {
                $("#item_i18n_sender_name_translations_<%= target.code %>").val(body);
              }
            });
          }
        <% end %>
      });
    <% end %>

    <% @cur_site.translate_targets.each do |target| %>
      <dt class="ss-translations-field-<%= target.id %>">
        <%= @model.t :i18n_sender_name %><%= @model.tt :i18n_sender_name %>
      </dt>
      <dd class="ss-translations-field-<%= target.id %>">
        <%= text_field_tag "#{f.object_name}[i18n_sender_name_translations][#{target.code}]", @item.i18n_sender_name_translations[target.code] %>
      </dd>
    <% end %>
  <% end %>
</dl>
