<dl class="see mod-ezine-deliver-test">
  <dt><%= @model.t :test_group_ids %></dt>
  <dd>
    <%= f.hidden_field "test_group_ids[]", value: "", class: "hidden-ids" %>
    <%= link_to t("ss.apis.groups.index"), cms_apis_groups_path, class: "ajax-box" %>
  </dd>
  <dd>
    <table class="index ajax-selected">
      <thead>
      <tr>
        <th class="name"><%= Cms::Group.t :name %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @item.test_groups.each do |group| %>
        <tr data-id="<%= group.id %>">
          <td><%= f.hidden_field "test_group_ids[]", value: group.id %> <%= group.name %></td>
          <td><%= link_to t("ss.buttons.delete"), "#", class: "deselect btn" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </dd>
</dl>
