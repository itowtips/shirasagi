<dl class="see">
  <dt><%= @model.t :name %><%= @item.tt :name %><%= required_label %></dt>
  <dd><%= f.text_field :name %></dd>

  <dt><%= @model.t :source_url %><%= @item.tt :source_url %><%= required_label %></dt>
  <dd><%= f.text_field :source_url %></dd>

  <dt><%= @model.t :api_type %><%= @model.tt :api_type %><%= required_label %></dt>
  <dd><%= f.select :api_type, @item.api_type_options %></dd>

  <dt><%= @model.t :resource_size_limit_mb %><%= @model.tt :resource_size_limit_mb %></dt>
  <dd><%= f.number_field :resource_size_limit_mb, min: 0 %> <span class="postfix"><%= t('ss.units.mega_byte') %></span></dd>

  <dt><%= @model.t :order %><%= @model.tt :order %></dt>
  <dd><%= f.number_field :order %></dd>
</dl>
