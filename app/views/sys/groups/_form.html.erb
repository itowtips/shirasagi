<dl class="see">
  <dt><%= @model.t :name %><%= @model.tt :name %></dt>
  <% if I18n.available_locales.length == 1 %>
    <dd><%= f.text_field :i18n_name, autofocus: pc_browser? %></dd>
  <% else %>
    <dd></dd>
    <% I18n.default_locale.tap do |lang| %>
      <dt class="depth-2 i18n_name"><%= @model.t(:"i18n_name_#{lang}", default: t("ss.options.lang.#{lang}", default: lang.to_s)) %></dt>
      <dd class="depth-2 i18n_name">
        <%= text_field_tag "#{f.object_name}[i18n_name_translations][#{lang}]", tryb { @item.i18n_name_translations[lang].presence } || @item.name, autofocus: pc_browser? %>
      </dd>
    <% end %>
    <% I18n.available_locales.reject { |lang| lang == I18n.default_locale }.each do |lang| %>
      <dt class="depth-2 i18n_name"><%= @model.t(:"i18n_name_#{lang}", default: t("ss.options.lang.#{lang}", default: lang.to_s)) %></dt>
      <dd class="depth-2 i18n_name">
        <%= text_field_tag "#{f.object_name}[i18n_name_translations][#{lang}]", tryb { @item.i18n_name_translations[lang] } %>
      </dd>
    <% end %>
  <% end %>

  <% if @item.domain_editable? %>
  <dt><%= @model.t :domains %><%= @model.tt :domains %></dt>
  <dd><%= f.text_field :domains %></dd>
  <% end %>

  <dt><%= @model.t :order %><%= @model.tt :order %></dt>
  <dd><%= f.number_field :order %></dd>

  <dt><%= @model.t :activation_date %><%= @model.tt :activation_date %></dt>
  <dd><%= f.text_field :activation_date, class: 'datetime js-datetime', value: tryb { @item.activation_date.strftime("%Y/%m/%d %H:%M") } %></dd>

  <dt><%= @model.t :expiration_date %><%= @model.tt :expiration_date %></dt>
  <dd><%= f.text_field :expiration_date, class: 'datetime js-datetime', value: tryb { @item.expiration_date.strftime("%Y/%m/%d %H:%M") } %></dd>

  <% if @item.persisted? && @item.root? %>
  <dt><%= @model.t :gws_use %><%= @model.tt :gws_use %></dt>
  <dd><%= f.select :gws_use, @item.gws_use_options, include_blank: true %></dd>
  <% end %>

  <% if @item.root? && SS.config.ss.upload_policy.present? %>
  <dt><%= @model.t :upload_policy %><%= @model.tt :upload_policy %></dt>
  <dd><%= f.select :upload_policy, @item.upload_policy_options %></dd>
  <% end %>
</dl>
