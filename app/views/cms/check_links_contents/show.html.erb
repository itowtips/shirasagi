<div class="addon-views">
  <%= render "ss/crud/addon", addon: { id: "addon-basic", head: "エラー情報" } do %>
    <dl class="see">
      <dt><%= @item.class.name %></dt>
      <dd>
        <% if @item.allowed?(:read, @cur_user, site: @cur_site, node: @item.parent) %>
          <%= link_to @item.name, @item.private_show_path %>
        <% else %>
          <%= @item.name %>
        <% end %>
      </dd>

      <dt><%= "公開画面" %></dt>
      <dd><%= link_to @item.full_url, @item.full_url, target: :_blank %></dd>

      <dt><%= "プレビュー" %></dt>
      <dd><%= link_to @item.full_url, @item.full_url, target: :_blank %></dd>

      <dt><%= @item.t("check_links_errors") %></dt>
      <dd><%=br @item.check_links_errors %></dd>
      <dd style="color: red;"><%= @item.t("check_links_errors_remark") %></dd>

      <dt><%= @item.t(:group_ids) %></dt>
      <dd><%=br @item.groups.pluck(:name).join("\n") %></dd>
    </dl>
  <% end %>
</div>
