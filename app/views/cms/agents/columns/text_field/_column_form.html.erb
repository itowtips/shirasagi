<% value ||= nil %>
<% controller ||= false %>
<% name = "#{f.object_name}[][in_wrap][value]" %>

<%= jquery do %>
Cms_Column_Form.addSyntaxCheck("abc", {
  type: "text",
  getContent: function () { return $('[name="<%= name %>"]').val(); },
  setContent: function (content) { return $('[name="<%= name %>"]').val(content); },
});
<% end %>

<%= render 'cms/agents/columns/main/base', f: f, column: column, value: value, controller: controller do %>
  <%= text_field_tag(name, value.try(:value), column.form_options.merge(id: nil)) %>
<% end %>
