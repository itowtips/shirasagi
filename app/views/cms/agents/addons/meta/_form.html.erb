<%= coffee do %>
$ ->
  $("dl.meta").hide()
  $("#addon-cms-agents-addons-meta header h2").addClass("hide")
  $("#addon-cms-agents-addons-meta header h2").on 'click', ->
    $("dl.meta").animate( { height: 'toggle' }, 'fast' )
    if $(this).hasClass("hide")
      $(this).addClass("show")
      $(this).removeClass("hide")
    else
      $(this).addClass("hide")
      $(this).removeClass("show")
    return false
<% end %>

<dl class="see meta">
  <dt><%= @model.t :keywords %><%= @model.tt :keywords %></dt>
  <dd><%= f.text_field :keywords %></dd>

  <dt><%= @model.t :description %><%= @model.tt :description %></dt>
  <dd><%= f.text_area :description %></dd>

  <dt><%= @model.t :summary_html %><%= @model.tt :summary_html %></dt>
  <dd><%= f.text_area :summary_html %></dd>
</dl>
