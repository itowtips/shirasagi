<% return if @node.nil? %>
<% return if @cur_part.site_search_keywords.blank? %>
<%
  def render_search_keywords
    h = []
    h << @cur_part.upper_html if @cur_part.upper_html.present?
    h << "<ul>"
    @cur_part.site_search_keywords.each do |keyword|
      url = @node.url + "?" + { s: { keyword: keyword } }.to_query
      h << "<li>" + link_to(keyword, url, rel: :nofollow, class: keyword) + "</li>"
    end
    h << "</ul>"
    h << @cur_part.lower_html if @cur_part.lower_html.present?
    h.join("\n")
  end
%>
<%== sanitize(render_search_keywords) %>
