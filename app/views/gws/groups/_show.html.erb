<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd></dd>

  <% I18n.default_locale.tap do |lang| %>
    <dt class="depth-2 i18n_name"><%= @model.t(:"i18n_name_#{lang}", default: t("ss.options.lang.#{lang}", default: lang.to_s)) %></dt>
    <dd class="depth-2 i18n_name">
      <%= tryb { @item.i18n_name_translations[lang] } || @item.name %>
    </dd>
  <% end %>
  <% I18n.available_locales.reject { |lang| lang == I18n.default_locale }.each do |lang| %>
    <dt class="depth-2 i18n_name"><%= @model.t(:"i18n_name_#{lang}", default: t("ss.options.lang.#{lang}", default: lang.to_s)) %></dt>
    <dd class="depth-2 i18n_name">
      <%= tryb { @item.i18n_name_translations[lang] } %>
    </dd>
  <% end %>

  <% if @item.domains.present? %>
  <dt><%= @model.t :domains %></dt>
  <dd><%= @item.send :domains %></dd>
  <% end %>

  <dt><%= @model.t :order %></dt>
  <dd><%= @item.send :order %></dd>

  <dt><%= @model.t :superior_id %></dt>
  <dd><%= @item.superior.try { |user| user.long_name } %></dd>

  <% if @item.activation_date.present? %>
  <dt><%= @model.t :activation_date %></dt>
  <dd><%= ss_time_tag @item.activation_date %></dd>
  <% end %>

  <% if @item.expiration_date.present? %>
  <dt><%= @model.t :expiration_date %></dt>
  <dd><%= ss_time_tag @item.expiration_date %></dd>
  <% end %>
</dl>
