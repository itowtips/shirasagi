<% render_notice_user_setting = proc do |type| %>
  <dt class="depth-2"><%= @model.t("notice_#{type}_user_setting") %></dt>
  <dd></dd>
  <dt class="depth-3"><%= t("modules.sns/notification")%></dt>
  <dd><%= @item.label("notice_#{type}_user_setting") %></dd>
  <dt class="depth-3"><%= t("gws/memo/notice_user_settings.send_mail_setting") %></dt>
  <dd><%= @item.label("notice_#{type}_email_user_setting") %></dd>
  <% if @item.respond_to?("notice_#{type}_slack_user_setting_options") %>
    <dt class="depth-3"><%= t("gws/memo/notice_user_settings.send_slack_setting") %></dt>
    <dd><%= @item.label("notice_#{type}_slack_user_setting") %></dd>
  <% end %>
<% end %>

<dl class="see">
  <dt><%= t "modules.addons.gws/system/notice_setting" %></dt>
  <dd></dd>
  <% render_notice_user_setting.call(:schedule) %>
  <% render_notice_user_setting.call(:todo) %>
  <% render_notice_user_setting.call(:workflow) %>
  <% render_notice_user_setting.call(:circular) %>
  <% render_notice_user_setting.call(:monitor) %>
  <% render_notice_user_setting.call(:survey) %>
  <% render_notice_user_setting.call(:board) %>
  <% render_notice_user_setting.call(:faq) %>
  <% render_notice_user_setting.call(:qna) %>
  <% render_notice_user_setting.call(:discussion) %>
  <% render_notice_user_setting.call(:report) %>
   <% render_notice_user_setting.call(:announcement) %>
  <dt></dt><dd></dd>
  <dt><%= t("gws/memo/notice_user_settings.send_mail_address") %></dt>
  <dd><%= @item.send_notice_mail_addresses.join(", ") %></dd>
  <dt><%= t("gws/memo/notice_user_settings.send_slack_id") %></dt>
  <dd><%= @item.send_notice_slack_id %></dd>
</dl>
