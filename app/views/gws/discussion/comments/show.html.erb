<% redirection = gws_discussion_topic_comment_path(topic_id: @topic.id, id: @item.id) %>
<div class="gws-discussion">
<%= form_for :item, url: reply_gws_discussion_topic_comment_path(topic_id: @topic.id, id: @item.id, redirection: redirection), html: { method: :put, multipart: true, autocomplete: :off } do |f| %>
  <%= render partial: 'thread', locals: { f: f, topic: @item, limit: 0 } %>
<% end %>
</div>
