<h2 class="gws-discussion-topic"><%= @topic.name %></h2>

<div class="gws-discussion-thread">
  <% @items.each do |item| %>
    <%= form_for :item, url: reply_gws_discussion_topic_comment_path(topic_id: @topic.id, id: item.id), html: { method: :put, multipart: true, autocomplete: :off } do |f| %>
      <%= render partial: 'thread', locals: { f: f, topic: item, limit: 5 } %>
    <% end %>
  <% end %>
  <% if @items.blank? %>
    <div class="addon-view">
      <div class="addon-body">
        <dl class="see">
          <dd class="wide">
            <%= "スレッドがありません" %>
          </dd>
        </dl>
      </div>
    </div>
  <% end %>
</div>

<div class="gws-discussion-navi">
  <div class="addon-view">
    <div class="addon-head"><h2><%= "TODO" %></h2></div>
    <% @todos.each do |todo| %>
    <div class="addon-body">
      <dl class="see">
        <dd class="wide">
          <%= link_to todo.name, gws_discussion_topic_todo_path(id: todo.id) %>
        </dd>
      </dl>
    </div>
    <% end %>
    <% if @todos.blank? %>
    <div class="addon-body">
      <dl class="see">
        <dd class="wide">
          <%= "登録がありません" %>
        </dd>
      </dl>
    </div>
    <% end %>
    <div class="addon-body">
      <%= link_to "スケジュールを見る", gws_discussion_topic_todos_path %>
    </div>
  </div>
</div>

<div class="gws-discussion-navi">
  <div class="addon-view">
    <div class="addon-head"><h2><%= "スレッド一覧" %></h2></div>
    <% @items.each do |item| %>
    <div class="addon-body">
      <dl class="see">
        <dd class="wide">
          <%= link_to item.name, "#" %>
        </dd>
      </dl>
    </div>
    <% end %>
    <div class="addon-body">
      <%= link_to "スレッド一覧を見る", gws_discussion_topic_comments_path %>
    </div>
  </div>
</div>

<div class="gws-discussion-navi">
  <div class="addon-view">
    <div class="addon-head"><h2><%= "参加者一覧" %></h2></div>
    <div class="addon-body">
      <dl class="see">
        <dd class="wide">
          <%= link_to "aaaa", "#" %>
        </dd>
      </dl>
    </div>
  </div>
</div>

<%= paginate @items if @items.try(:current_page) %>
