<div class="main-box">
<% url = instance_exec(&@item.url_lazy) %>
<% if url %>
<%= jquery do %>location.href = "<%= url %>";<% end %>
<% else %>
  <div class="gws-reminder-notfound">
    <div class="notice"><%= t("gws.reminder.notification.notfound") %></div>
    <% similar_name_items = @item.similar_name_items.allow(:read, @cur_user, site: @cur_site) %>
    <% if similar_name_items.present? %>
      <h2><%= t("gws.reminder.notification.similar_name_items") %></h2>
      <ul>
      <% similar_name_items.each do |item| %>
      <% url, options = item.reminder_url %>
        <li><%= link_to(item.name, send(url, options)) rescue item.name %></li>
      <% end %>
      </ul>
    <% end %>

    <% similar_repeat_items = @item.similar_name_items.allow(:read, @cur_user, site: @cur_site) %>
    <% if similar_repeat_items.present? %>
      <h2><%= t("gws.reminder.notification.similar_repeat_items") %></h2>
      <ul>
      <% similar_repeat_items.each do |item| %>
      <% url, options = item.reminder_url %>
        <li><%= link_to(item.name, send(url, options)) rescue item.name %></li>
      <% end %>
      </ul>
    <% end %>
  </div>
<% end %>
</div>

