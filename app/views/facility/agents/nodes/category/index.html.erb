<table class="facility-nodes">
  <thead>
    <tr>
      <th><%= Facility::Node::Page.t :name %></th>
      <th><%= Facility::Node::Page.t :address %></th>
      <th><%= Facility::Node::Page.t :tel %></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= link_to item.name, item.url %></td>
      <td><%= item.address %></td>
      <td><%= item.tel %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items if @items.try(:current_page) %>
