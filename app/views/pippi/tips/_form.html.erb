<%= html_editor ".html", advanced: Cms::EditorExtension.allowed?(:use, @cur_user, site: @cur_site) %>

<dl class="see">
  <dt><%= @item.t :date %></dt>
  <dd><%= l(@cur_date, format: :long) %></dd>

  <dt><%= @item.t :layout %></dt>
  <dd>
    <% layout = @model.find_layout(@cur_site, @cur_node, @cur_date) %>
    <% if layout %>
      <% if layout.allowed?(:read, @cur_user, site: @cur_site) %>
        <%= link_to layout.name, pippi_tips_layout_path(id: layout), target: "_blank", rel: "noopener" %>
      <% else %>
        <%= layout.name %>
      <% end %>
    <% end %>
  </dd>

  <dt class="wide"><%= f.text_area :html, class: "html", style: "height: 100px;" %></dt>
</dl>
