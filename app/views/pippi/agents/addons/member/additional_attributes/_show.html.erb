<%= jquery do %>
  $("#addon-member-agents-addons-additional_attributes").hide();
  $("#addon-ezine-agents-addons-subscription").hide();
<% end %>

<dl class="see mod-pippi-member-additional-attributes">
  <dt><%= @item.t(:subscribe_line_message) %></dt>
  <dd><%= @item.label :subscribe_line_message %></dd>

  <% 1.upto(Cms::Member::CHILD_MAX_SIZE) do |i| %>
    <% next if @item.send("child#{i}_birthday").blank? %>
    <dt><%= @model.t "child#{i}_birthday" %></dt>
    <dd><%= l(@item.send("child#{i}_birthday").to_date, format: :long) %>（<%= "#{@item.send("child#{i}_age")}歳" %>）</dd>
  <% end %>

  <dt><%= @item.t :residence_areas %></dt>
  <dd><%= @item.residence_areas.map { |k| t("pippi.options.residence_areas.#{k}") }.join(", ") %></dd>
</dl>
