<% @tap_menu = proc do |item| %>
  <%= link_to :show, action: :show, id: item if item.allowed?(:read, @cur_ss_user) %>
  <%# link_to :edit, action: :edit, id: item if item.allowed?(:edit, @cur_user, site: @cur_site) %>

  <% public_url = public_url_for_company(@cur_node, item) %>
  <% public_path = public_path_for_company(@cur_node, item) %>
  <%= link_to :view_site, public_url, target: :_blank if item.public? %>
  <% if @cur_site.mobile_enabled? %>
    <%= link_to :pc_preview, cms_preview_path(path: public_path[1..-1]), target: :_blank %>
    <%= link_to(:mobile_preview, cms_mobile_preview_path(path: public_path), target: :_blank) %>
  <% else %>
    <%= link_to :preview, cms_preview_path(path: public_path[1..-1]), target: :_blank %>
  <% end %>
<% end %>

<% @index_meta = proc do |item| %>
  <span class="id">#<%= item.id %></span>
  <span class="datetime"><%= item.updated.strftime("%Y/%m/%d %H:%M") %></span>
  <span class="state"><%= t "views.state.#{item.state}" %></span>
<% end %>

