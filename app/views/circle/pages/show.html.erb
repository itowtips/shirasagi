<div class="addon-views">
  <div id="facility-info" class="addon-view">
    <dl class="see body">
      <dt><%= @model.t :name %></dt>
      <dd><%= @item.name %></dd>

      <dt><%= @model.t :activity %></dt>
      <dd><%=br @item.send :activity %></dd>

      <dt><%= @model.t :venue %></dt>
      <dd><%=br @item.send :venue %></dd>

      <dt><%= @model.t :address %></dt>
      <dd><%=br @item.send :address %></dd>

      <dt><%= @model.t :hours %></dt>
      <dd><%=br @item.send :hours %></dd>

      <dt><%= @model.t :message %></dt>
      <dd><%=br @item.send :message %></dd>

      <dt><%= @model.t :related_url %></dt>
      <dd><%= link_to(@item.related_url, @item.related_url, target: "_blank")  %></dd>

      <dt><%= @model.t :contact %></dt>
      <dd><%=br @item.send :contact %></dd>

      <% @item.additional_info.each do |info| %>
        <dt><%=br info[:field] %></dt>
        <dd><%=br info[:value] %></dd>
      <% end %>

      <dt><%= t("modules.addons.circle/category") %></dt>
      <dd><%= @item.send(:categories).pluck(:name).join(", ") %></dd>

      <dt><%= t("modules.addons.circle/location") %></dt>
      <dd><%= @item.send(:locations).pluck(:name).join(", ") %></dd>
    </dl>

    <div class="summary image">
      <% if @summary_image.present? %>
        <% @summary_image.each do |page, path, thumb_size| %>
          <p>
            <%= link_to path do %>
              <%= image_tag page.image.thumb_url + "?" + thumb_size.to_query, alt: page.image_alt %>
            <% end %>
          </p>
          <% if page.image_comment.present? %>
            <p><%= page.image_comment %></p>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <% if @images.present? %>
      <header>
        <h2><%= t("circle.image") %></h2>
      </header>
      <div class="images">
        <% @images.each do |page, path, thumb_size| %>
          <div class="image">
            <p>
              <%= link_to path do %>
                <%= image_tag page.image.thumb_url + "?" + thumb_size.to_query, alt: page.image_alt %>
              <% end %>
            </p>
            <% if page.image_comment.present? %>
              <p><%= page.image_comment %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if @merged_map.present? %>
      <% @cur_page = @merged_map %>
      <%= render file: "map/agents/addons/page/view/index" %>
    <% end %>

    <% if @maps.present? %>
      <div class="map-pages">
        <% if @cur_node.allowed?(:edit, @cur_user, site: @cur_site) %>
          <% @maps.each do |map| %>
            <p><%= link_to map.name, edit_circle_map_path(cid: @item.id, id: map.id), class: "icon-page" %></p>
          <% end %>
        <% else %>
          <% @maps.each do |map| %>
            <p><%= link_to map.name, circle_map_path(cid: @item.id, id: map.id), class: "icon-page" %></p>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
