<nav class="nav-menu">
  <% if params[:action] =~ /index/ %>
    <%= link_to(t('ss.links.new'), { action: :new }, class: :new) if Gws::Group.allowed?(:edit, @cur_user, site: @cur_site) %>
    <%= link_to t('ss.links.download'), action: :download_all rescue nil %>
    <%= link_to t('ss.links.import'), action: :import rescue nil %>
  <% elsif params[:action] =~ /new|create|download_all|import|destroy_all/ %>
    <%= link_to(t('ss.links.back_to_index'), { action: :index }, class: "back-to-index") %>
  <% elsif params[:action] =~ /edit|update|delete/ %>
    <%= link_to(t('ss.links.back_to_show'), { action: :show, id: @item }, class: "back-to-show") if Gws::Group.allowed?(:read, @cur_user, site: @cur_site) %>
    <%= link_to(t('ss.links.back_to_index'), { action: :index }, class: "back-to-index") %>
  <% else %>
    <%= link_to(t('ss.links.edit'), { action: :edit, id: @item }, class: :edit) if Gws::Group.allowed?(:edit, @cur_user, site: @cur_site) %>
    <%= link_to(t('ss.links.delete'), { action: :delete, id: @item }, class: :delete) if Gws::Group.allowed?(:delete, @cur_user, site: @cur_site) %>
    <%= link_to(t('ss.links.back_to_index'), { action: :index }, class: "back-to-index") %>
  <% end %>
</nav>
