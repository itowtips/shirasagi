<%= form_for :item, url: { action: :import }, html: { method: :post } do |f| %>
<%= error_messages_for :item %>

<section class="main-box">
  <header><h2><%= t("ss.import") %></h2></header>

  <dl class="see">
    <dt><%= t("ss.file") %></dt>
    <dd><%= f.file_field :file %></dd>

    <% if Cms::Tool.allowed?(:edit, @cur_user, site: @cur_site) %>
      <dt><%= t "ss.import_log" %></dt>
      <dd><%= link_to t("job.log"), job_cms_logs_path, target: "_blank" %></dd>
    <% end %>
  </dl>
</section>

<footer class="send">
  <%= f.submit t("ss.import"), class: "save", onclick: "return confirm('#{t("ss.confirm.import")}')" %>
  <%= f.button t("ss.buttons.cancel"), class: "btn-default", onclick: "location.href='#{url_for(action: :index)}'; return false;" %>
</footer>
<% end %>
