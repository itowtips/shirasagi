<dl class="column">
  <dt><%= @model.t :image_id %></dt>
  <dd><%= f.file_field :in_image %></dd>
  <% if @item.image %>
    <dd>
      <%= image_tag @item.image.thumb_url %>
      <label>
        <%= f.check_box :rm_image %><%= t "views.button.delete" %> (<%= @item.image.filename %>)
      </label>
    </dd>
  <% end %>
</dl>

<dl class="column">
  <dt><%= @model.t :description %></dt>
  <dd><%= f.text_area :description %></dd>
</dl>

<dl class="column">
  <dt><%= @model.t :genres %></dt>
  <dd><%= f.text_area :genres %></dd>
</dl>
