<dl class="see mod-member-additional-attributes">
  <dt><%= @model.t :kana %><%= @model.tt :kana %></dt>
  <dd><%= f.text_field :kana %></dd>
  <dt><%= @model.t :tel %><%= @model.tt :tel %></dt>
  <dd><%= f.text_field :tel %></dd>
  <dt><%= @model.t :addr %><%= @model.tt :addr %></dt>
  <dd><%= f.text_field :addr %></dd>
  <dt><%= @model.t :sex %><%= @model.tt :sex %></dt>
  <dd><%= f.select :sex, @item.sex_options, include_blank: true %></dd>
  <dt><%= @model.t :birthday %><%= @model.tt :birthday %></dt>
  <dd><%= f.text_field :birthday, class: "datetime", value: tryb { @item.birthday.strftime('%Y/%m/%d') } %></dd>
</dl>

<%= jquery do %>
  if ($.support.opacity) {
    // above IE9
    $(".mod-member-additional-attributes .datetime").
    datetimepicker({ lang: "ja", timepicker: false, format: "Y/m/d" });
  }
<% end %>
