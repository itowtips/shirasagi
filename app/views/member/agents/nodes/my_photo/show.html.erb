<%= render partial: "menu" %>

<div class="member-myblog-pages-form">
  <dl class="see">
    <dt><%= @model.t :name %></dt>
    <dd><%= @item.name %></dd>
  </dl>

  <% @model.addons.each do |addon| %>
    <% file = "#{Rails.root}/app/views/#{addon.path}/view/_show.html.erb" %>
    <%= render file: file if File.exists?(file) %>
  <% end %>

  <dl class="see">
    <dt><%= @model.t :state %></dt>
    <dd><%= @item.label :state %></dd>
  </dl>
</div>
