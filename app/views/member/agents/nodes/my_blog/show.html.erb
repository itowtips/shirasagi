<%= render partial: "menu" %>

<article class="blog page">
  <header>
    <h2><%= @item.name %></h2>
    <time class="released" datetime="<%= I18n.l @item.date.to_date, format: :iso %>"><%= I18n.l @item.date.to_date, format: :long %></time>
  </header>
  <div class="genres">
    <%= @item.genres.join(" ") %>
  </div>
  <div class="body">
    <%== @item.html %>
  </div>
</article>
