<dl class="column">
  <dt>
    <%= @model.t :name %>
    <% if params[:action] != 'invite' %>
    <%= required_label %>
    <% end %>
  </dt>
  <dd>
    <% if params[:action] == 'invite' %>
      <%= @item.name %>
    <% else %>
      <%= f.text_field :name %>
      <%= remarks :name %>
    <% end %>
  </dd>
</dl>

<% if params[:action] != 'invite' %>
<dl class="column">
  <dt>管理者</dt>
  <dd><%= @cur_member.name %></dd>
</dl>
<% end %>

<dl class="column">
  <dt>メンバー</dt>
  <dd>
    <%= f.text_area :in_invitees %>
    <%= remarks :in_invitees %>
  </dd>
</dl>

<dl class="column">
  <dt>
    <%= @model.t :invitation_message %>
    <%= required_label %>
  </dt>
  <dd>
    <%= f.text_area :invitation_message %>
    <%= remarks :invitation_message %>
  </dd>
</dl>
