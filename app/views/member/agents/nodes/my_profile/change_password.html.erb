<%= render partial: "menu" %>

<div class="cms-member-change-password">
  <p>パスワードを変更します。</p>
  <%= form_for :item, url: "#{@cur_node.url}confirm_password.html", html: { method: "POST" } do |f| %>
    <div class="member-change-password-form columns">
      <%= error_messages_for :item, header_message: false %>
      <%= render partial: "form_change_password", locales: { f: f, confirm: false } %>
      <footer class="send">
        <%= f.submit I18n.t("member.button.change_password"), name: :submit %>
        <%= f.submit I18n.t("member.button.back"), name: :back %>
      </footer>
    </div>
  <% end %>
</div>
