<%= stylesheet_link_tag 'member/public', media: 'all' %>
<%= javascript_include_tag 'member/public' %>

<dl class="column">
  <dt>
    <%= @model.t :name %>
    <%= required_label %>
  </dt>
  <dd>
    <%= f.text_field :name %>
    <%= remarks :name %>
  </dd>
</dl>

<dl class="column">
  <dt>
    <%= @model.t :email %>
    <%= required_label %>
  </dt>
  <dd>
    <%= f.text_field :email %>
    <%= remarks :email %>
  </dd>
</dl>

<dl class="column">
  <dt><%= @model.t :email_type %></dt>
  <dd>
    <%= f.select :email_type, @item.email_type_options %>
    <%= remarks :email_type %>
  </dd>
</dl>

<dl class="column">
  <dt><%= @model.t :kana %></dt>
  <dd>
    <%= f.text_field :kana %>
    <%= remarks :kana %>
  </dd>
</dl>

<dl class="column">
  <dt><%= @model.t :tel %></dt>
  <dd>
    <%= f.text_field :tel %>
    <%= remarks :tel %>
  </dd>
</dl>

<dl class="column">
  <dt><%= @model.t :addr %></dt>
  <dd>
    <%= f.text_field :addr %>
    <%= remarks :addr %>
  </dd>
</dl>

<dl class="column">
  <dt><%= @model.t :sex %></dt>
  <dd>
    <%= f.select :sex, @item.sex_options, include_blank: true %>
    <%= remarks :sex %>
  </dd>
</dl>

<dl class="column">
  <dt><%= @model.t :birthday %></dt>
  <dd>
    <%= f.text_field :birthday %>
    <%= remarks :birthday %>
  </dd>
</dl>

<%= render file: '_mail_category_form', locals: { f: f } %>

<%= jquery do %>
  if ($.support.opacity) {
    $("#item_birthday").datetimepicker({ lang: "ja", timepicker: false, format: "Y/m/d" });
  }
<% end %>
