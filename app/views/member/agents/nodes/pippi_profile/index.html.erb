<%= render partial: "menu" %>

<div class="mypage-show member-profile">
  <div class="columns">
    <dl class="column">
      <dt><%= @model.t :name %></dt>
      <dd><%= @item.name %></dd>
    </dl>

    <dl class="column">
      <dt><%= @item.t :subscribe_line_message %></dt>
      <dd><%= @item.label :subscribe_line_message %></dd>
    </dl>

    <% 1.upto(Cms::Member::CHILD_MAX_SIZE) do |i| %>
      <% next if @item.send("child#{i}_name").blank? %>
      <dl class="column">
        <dt><%= @model.t("child#{i}") %></dt>
        <dd></dd>

        <dt class="depth-2"><%= @model.t("child_name") %></dt>
        <dd><%= @item.send("child#{i}_name") %></dd>

        <dt class="depth-2"><%= @model.t("child_birthday") %></dt>
        <dd><%= @item.send("child#{i}_birthday_label") %></dd>
      </dl>
    <% end %>

    <% @item.each_deliver_categories do |root, children| %>
      <dl class="column">
        <dt><%= root.name %></dt>
        <dd><%= children.map(&:name).join(", ") %></dd>
      </dl>
    <% end %>
  </div>
</div>
