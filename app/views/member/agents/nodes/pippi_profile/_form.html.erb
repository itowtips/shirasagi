<%= stylesheet_link_tag 'member/public', media: 'all' %>
<%= javascript_include_tag 'member/public' %>
<%= jquery do %>
  $("button[name='postal-code-search']").postalCodeSearch({
    path: "<%= "#{@cur_node.url}postal_code" %>"
  });
<% end %>

<fieldset class="column name">
  <legend>
    <%= @model.t :name %>
  </legend>
  <div>
    <%= @item.name %>
  </div>
</fieldset>

<fieldset class="column subscribe-line-message">
  <legend>
    <%= @model.t(:subscribe_line_message) %>
    <%= required_label %>
  </legend>
  <div>
    <%= f.select :subscribe_line_message, @item.subscribe_line_message_options %>
    <%= remarks :subscribe_line_message %>
  </div>
</fieldset>

<fieldset class="column child-age-situations">
  <legend>
    <%= @model.t(:child_age_situations) %>
  </legend>
  <div>
    <% @item.child_age_situations_options.each do |k, v| %>
      <label class="<%= v %>">
        <%= check_box_tag "#{f.object_name}[child_age_situations][]", v, @item.child_age_situations.include?(v.to_s) %>
        <%= k %>
      </label>
    <% end %>
  </div>
</fieldset>
