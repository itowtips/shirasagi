        loc = $(this).val().split(",")
        zoomLevel = $(this).attr("data-zoom-level")
        pos = [parseFloat(loc[0]), parseFloat(loc[1])]
        map.setCenter(pos)
        map.setZoom(parseInt(zoomLevel)) if zoomLevel
        select.val("")
